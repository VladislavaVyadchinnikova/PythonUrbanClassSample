class Filter:
    """
    Документация на класс.
    Класс описывает фильтр-кофе. 
    """
    def __init__(self, country: str, processing: str, q_grading: int, volume:int):
        """ 
        Инициализация экземпляра класса. 

        :param country: Страна-производитель кофейного зерна
        :param processing: Способ обработки зерна
        :param q_grading: Оценка по шкале q
        :param volume: Сколько мл приготовили?
        """
        self.country = country
        self.processing = processing
        self.q_grading = q_grading
        self.volume = volume

    def get_filter_info(self):
        """ Узнаем общую информацию о приготовленном фильтре """
        ...

    def count_filter(self):
        """ Сколько кофе осталось? """
        ...
  
    def pour_filter(self, pour_ml: int):
        """ 
        Наливаем кофе
        
        :param pour_ml: Объем отливаемого кофе
        """
        ...
        
